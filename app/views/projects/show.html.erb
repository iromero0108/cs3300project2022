<!DOCTYPE html>
<html lang="en">
<head>
  <title>Show Project</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

</head>
<body>
<style>
    h1{
      text-align: center;
      font-size: 40px;
      
    }
    h2{
      text-align:center;  
    }
    h3{ 
      text-align:center;
    }
    p{
      font-size: 20px
    }
    left{
      justify-content:left;
    }
    body{
      background-color:gray;

    }

    
</style>

<!--Menu Bar-->
<div class="container-fluid bg-dark pt-2 pb-2">
    <div class="row">
        <div class="col-1">
            <button type="button" class="btn btn-dark" onclick = "window.location.href='http://localhost:3000/';">Home</button>
        </div>
        <div class="col-1">
            <div class="dropdown">
                <button type="button" class="btn btn-dark dropdown-toggle " data-bs-toggle="dropdown">
                    Account
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">Sign Up</a></li>
                    <li><a class="dropdown-item" href="#">Sign in</a></li>
                    
                </ul>
            </div>
            
        </div>
         <div class="col-1">
            <button type="button" class="btn btn-dark active" onclick = "window.location.href='/projects';">Projects</button>
        </div>
    </div>
</div>
<!--rgb(61,188,219, 0.8)-->
<!--Render Project-->
<div class="container-fluid border border-dark my-2" style="background: rgb(200,200,246, 0.5); font-weight: bold" >
    

      <h1> <%=@project.title %>  </h1>
    
      <div class="row">
        <div class="col mt-4">
            
            <p style="text-align:center;"> <%=@project.description %></p>

              
            
        </div>
      </div>
    
</div>

<!--Options-->
<div class="container-fluid bg-gray my-3 justify-content-center border border-dark">
  <div class="row">
    
    <div class="col my-2">
      <%= link_to "Back to projects", projects_path, class: "btn btn-large btn-dark btn-block" %>
    </div>

    <div class="col my-2">
      <%= link_to "Edit this project", edit_project_path(@project), class: "btn btn-large btn-primary btn-block" %>
    </div>

    <div class="col my-2">
      <!-- Trigger the modal with a button -->
      <button type="button" class="btn btn-danger btn-block btn-large" data-toggle="modal" data-target="#myModal">Delete Project</button>
      
      <!-- Modal -->
      <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
        
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title"> Caution!</h4>
            </div>
            <div class="modal-body">
              <p>Are you sure you want to delete the project?</p>
            </div>
            <div class="modal-footer me-auto">
              <div class="row">
                <div class="col">
                  <button type="button" class="btn btn-default btn-block border border-dark" data-dismiss="modal">Cancel</button>
                </div>

                <div class="col">
                  <%= button_to "Yes, Destroy this project", @project, method: :delete, class: "btn btn-secondary btn-block"%>
                </div>
              </div>              
            </div>
          </div>
          
        </div>
      </div>
    </div>
  </div>
      
  
</div>

<div>
 

  
</div>


</body>
</html>